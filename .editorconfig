# Restart the editor after modifying the configuration
# Config Docs: https://editorconfig.org/

# Tell the EditorConfig plug-in that the current file is the root file
root = true

# Applies to all files
[*]
## Set character set
charset = utf-8
## Indentation style space | tab, space is recommended (will be automatically inherited to Prettier)
indent_style = space
## Number of spaces for indentation (automatically inherited to Prettier)
indent_size = 2
## Line break type LF | CR | CRLF, usually set to LF
end_of_line = lf
## Whether to insert blank lines at the end of the file
insert_final_newline = true
## Whether to delete leading and trailing spaces in a line
trim_trailing_whitespace = true

# Applies to .md files
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
